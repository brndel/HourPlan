<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent" android:layout_height="match_parent"
		tools:context=".learning.LearnDuelActivity" android:orientation="vertical" android:id="@+id/linearLayout"
>


	<ViewFlipper android:layout_width="match_parent" android:layout_height="100dp"
				 android:id="@+id/viewFlipperButton2"
				 android:inAnimation="@anim/fade_in_up"
				 android:outAnimation="@anim/fade_out_down"
				 android:rotation="180" android:layout_weight="0">
		<TextView
				android:text="@string/say_the_answer"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center"
				android:textSize="32sp" android:id="@+id/textViewPlayer2"/>
		<Button
				android:text="@string/show"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/showButton2"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
			>
				<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:id="@+id/wrongButton2"
						android:layout_weight="1"
						android:background="#FF2424"
						style="@style/Widget.AppCompat.Button.Borderless.Colored"
						android:foreground="@drawable/ripple_white"/>
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						app:srcCompat="@drawable/ic_wrong"
				/>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:layout_weight="1">
				<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent" android:id="@+id/rightButton2"
						android:layout_weight="1"
						android:background="#33cc33"
						style="@style/Widget.AppCompat.Button.Borderless.Colored"
						android:foreground="@drawable/ripple_white"/>
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent" app:srcCompat="@drawable/ic_check"
				/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</ViewFlipper>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="0" android:gravity="center"
			android:rotation="180">
		<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp" app:srcCompat="@drawable/ic_hearth"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/textViewLives2" tools:text="3"
				android:textColor="@android:color/primary_text_light" android:textSize="32sp"/>
	</LinearLayout>


	<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/textViewCenter"
			android:textSize="32sp"
			tools:text="Center"
			android:gravity="center_horizontal|center_vertical"
			android:layout_marginBottom="0dp" android:layout_weight="1"
			android:textColor="@android:color/primary_text_light"/>


	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="0" android:gravity="center">
		<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp" app:srcCompat="@drawable/ic_hearth"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/textViewLives" tools:text="3"
				android:textColor="@android:color/primary_text_light" android:textSize="32sp"/>
	</LinearLayout>
	<ViewFlipper android:layout_width="match_parent" android:layout_height="100dp"
				 android:id="@+id/viewFlipperButton" android:inAnimation="@anim/fade_in_up"
				 android:outAnimation="@anim/fade_out_down"
				 android:layout_weight="0">
		<TextView
				android:text="@string/say_the_answer"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center"
				android:textSize="32sp" android:id="@+id/textViewPlayer"/>
		<Button
				android:text="@string/show"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/showButton"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:layout_weight="1"
			>
				<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent" android:id="@+id/wrongButton" android:layout_weight="1"
						android:background="#FF2424"
						style="@style/Widget.AppCompat.Button.Borderless.Colored"
						android:foreground="@drawable/ripple_white"/>
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent" app:srcCompat="@drawable/ic_wrong"
				/>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:layout_weight="1">
				<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent" android:id="@+id/rightButton" android:layout_weight="1"
						android:background="#33cc33" style="@style/Widget.AppCompat.Button.Borderless.Colored"
						android:foreground="@drawable/ripple_white"/>
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent" app:srcCompat="@drawable/ic_check"
				/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</ViewFlipper>
</LinearLayout>