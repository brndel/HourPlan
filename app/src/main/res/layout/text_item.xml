<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:foreground="@drawable/ripple_dark"
				android:background="@android:color/white" android:id="@+id/layout">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/text"
			tools:text="Text"
			android:textStyle="bold" android:textSize="32sp" android:layout_alignParentStart="true"
			android:layout_marginStart="4dp" android:textColor="#CC141414"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textTooltip" tools:text="tooltip text"
			android:layout_below="@+id/text" android:layout_alignParentStart="true"
			android:layout_marginStart="8dp"/>

	<TextView
			android:id="@+id/textExtraInformation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/text"
			android:layout_marginStart="8dp"
			android:layout_toEndOf="@+id/textTooltip"
			android:textColor="#80808080"
			tools:text="extra information" />

</RelativeLayout>